---
import GitHub from "../../icons/GitHub.astro";
import Section from "../Section.astro";

const projects = [
    {
        url: "https://github.com/octavioserrago/veronaApp",
        description:
            "This is a comprehensive management system designed for a marble company, featuring multi-user capabilities to oversee all sales and economic indicators of the business. The frontend is developed using React, while the backend is built with Express. The database utilized is MySQL.",
        highlights: [
            "MySQL integration",
            "Client portfolio management",
            "Sales supervision",
            "Credit card income analysis",
            "Cash flow management",
            "API calls",
            "Express",
            "Javascript",
        ],
        name: "VeronaApp",
        isActive: true,
        github: "https://github.com/octavioserrago",
    },
    {
        url: "https://github.com/octavioserrago/veronaApp-OLD-",
        description:
            "Initially developed for a university course and continued at my company. Used Java and JavaFX with various libraries, faced deployment challenges, and now planned to renew as a web application.",
        highlights: [
            "MySQL integration",
            "Client portfolio management",
            "Sales supervision",
            "Credit card income analysis",
            "Cash flow management",
            "Java",
        ],
        name: "VeronaApp-(OLD)",
        isActive: false,
        github: "https://github.com/octavioserrago/veronaApp-OLD-",
    },
    {
        url: "https://github.com/octavioserrago/veronaWebPage",
        description:
            "Updated web page to display materials, colors, work samples, and catalogs.",
        highlights: [
            "SEO rates Improved",
            "Built with Astro",
            "Materials and Colors Display",
            "Tailwind CSS",
            "Work Samples",
            "Best-selling Sinks Catalog",
            "Complete Supplier Catalog",
        ],
        name: "VeronaWebPage",
        isActive: false,
        github: "https://github.com/octavioserrago",
    },
    {
        url: "https://github.com/octavioserrago/dolarTarjetaSimple",
        description:
            "Web app to calculate final price of international purchases in Argentine pesos with added taxes and bank charges.",
        highlights: [
            "Real-time API call for current card dollar rate",
            "Tailwind CSS",
            "CSS",
            "Javascript",
        ],
        name: "DolarTarjetaSimple",
        isActive: true,
        github: "https://github.com/octavioserrago/dolarTarjetaSimple",
    },
    {
        url: "https://github.com/octavioserrago/GymPro",
        description:
            "iOS app to track gym routines, exercises, repetitions, and weights. Created for learning Swift and SwiftUI.",
        highlights: [
            "Developed with Swift and SwiftUI",
            "CoreData integration",
            "Workout routine tracking",
            "Exercise, repetition, and weight management",
        ],
        name: "GymPro",
        isActive: true,
        github: "https://github.com/octavioserrago/GymPro",
    },
];
---

<Section title="Proyects">
    <ul>
        {
            projects.map(
                ({ url, description, highlights, name, isActive, github }) => {
                    return (
                        <li>
                            <article>
                                <header>
                                    <h3>
                                        <a
                                            href={url}
                                            target="_blank"
                                            title={`View project ${name}`}
                                        >
                                            {name}
                                        </a>
                                        {isActive && <span>â€¢</span>}
                                        {github && (
                                            <a
                                                class="github-code-link"
                                                href={github}
                                                target="_blank"
                                                title={`View source code for project ${name}`}
                                            >
                                                <GitHub />
                                            </a>
                                        )}
                                    </h3>
                                    <p>{description}</p>
                                </header>
                                <footer>
                                    {highlights.map((highlight) => {
                                        return <span>{highlight}</span>;
                                    })}
                                </footer>
                            </article>
                        </li>
                    );
                },
            )
        }
    </ul>
</Section>

<style>
    ul {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        margin-inline: -16px;
        list-style-type: none;
        padding: 0;
    }

    article {
        border-radius: 8px;
        border: 1px solid #f2f2f2;
        display: flex;
        flex-direction: column;
        padding: 12px;
        height: 100%;
        gap: 10px;
    }

    article header {
        flex: 1;
    }

    article h3 {
        margin-bottom: 4px;
    }

    article a {
        color: #111;
    }

    article a:hover {
        text-decoration: underline;
    }

    article p {
        font-size: 0.75rem;
        line-height: 1.2rem;
        margin-bottom: 4px;
    }

    article h3 span {
        color: rgb(0, 188, 47);
        animation-name: flicker;
        animation-duration: 3s;
        animation-timing-function: ease-in;
        animation-iteration-count: infinite;
    }

    footer {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
        font-size: 0.6rem;
    }

    footer span {
        border-radius: 6px;
        background: #eee;
        color: #444;
        font-size: 0.6rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }

    .github-code-link {
        margin-left: 5px;
    }

    @keyframes flicker {
        0% {
            opacity: 1;
        }
        50% {
            opacity: 0.25;
        }
        100% {
            opacity: 1;
        }
    }

    @media (width <= 700px) {
        ul {
            margin-inline: 0px;
        }

        article {
            border: none;
            box-shadow: 0 1px 1px #f2f2f2;
            padding: 0 0 16px 0;
        }
    }

    @media print {
        article h3 span {
            animation-name: none;
        }
    }
</style>
